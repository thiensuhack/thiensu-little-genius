<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <include
            android:id="@+id/loadingViewKMS"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            layout="@layout/loading_layout"
            android:background="@color/home_background" />

        <include
            android:id="@+id/notFoundDataViewKMS"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            layout="@layout/not_found_data_layout"
            android:background="@color/home_background" />

        <FrameLayout
            android:id="@+id/kmsMainFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </FrameLayout>
    </RelativeLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/kms_menu_footer_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="@drawable/kms_columns_footer" />
    </LinearLayout>

</LinearLayout>