<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#1fc0e9" 
    android:orientation="vertical"
    android:gravity="center_horizontal">
<include
    android:layout_width="match_parent"
    android:layout_height="@dimen/heightofheader"
    android:layout_gravity="bottom"
    layout="@layout/header"/>
<Button 
    android:layout_width="@dimen/widthOfBtInSetting"
    android:layout_height="@dimen/heightOfBtInSetting"
    android:background="@drawable/button_lon_contacts"
    android:layout_marginTop="20dp"
    android:text="KMS"
    android:textColor="@android:color/white"
    android:textSize="12pt"
    android:textStyle="bold"
    android:id="@+id/btn_kms" />
<Button 
	android:layout_width="@dimen/widthOfBtInSetting"
    android:layout_height="@dimen/heightOfBtInSetting"
	android:background="@drawable/button_lon_contacts"
	android:layout_marginTop="20dp"
	android:text="Media"
	android:textColor="@android:color/white"
	android:textSize="12pt"
	android:textStyle="bold"
	android:id="@+id/btn_media" />
         
<Button 
    android:layout_width="@dimen/widthOfBtInSetting"
    android:layout_height="@dimen/heightOfBtInSetting"
    android:background="@drawable/button_lon_contacts"
    android:layout_marginTop="20dp"
    android:text="Testimonials"
    android:textColor="@android:color/white"
    android:textSize="12pt"
    android:textStyle="bold"
    android:id="@+id/btn_testi" />

<Button 
    android:layout_width="@dimen/widthOfBtInSetting"
    android:layout_height="@dimen/heightOfBtInSetting"
    android:background="@drawable/button_lon_contacts"
    android:layout_marginTop="20dp"
    android:text="Program"
    android:textColor="@android:color/white"
    android:textSize="12pt"
    android:textStyle="bold"
    android:id="@+id/btn_program" />
                    
<Button 
    android:layout_width="@dimen/widthOfBtInSetting"
    android:layout_height="@dimen/heightOfBtInSetting"
    android:background="@drawable/button_lon_contacts"
    android:layout_marginTop="20dp"
    android:text="Contact"
    android:textColor="@android:color/white"
    android:textSize="12pt"
    android:textStyle="bold"
    android:id="@+id/btn_contact" />
                     
<Button 
    android:layout_width="@dimen/widthOfBtInSetting"
    android:layout_height="@dimen/heightOfBtInSetting"
    android:background="@drawable/button_lon_contacts"
    android:layout_marginTop="20dp"
    android:text="Preview"
    android:textColor="@android:color/white"
    android:textSize="12pt"
    android:textStyle="bold"
    android:id="@+id/btn_preview" />
</LinearLayout>